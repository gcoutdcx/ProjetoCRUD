        <p><h1>Cadastro de Usuários</h1></p>
        <button class="btn btn-success" type="button" onclick="mostrarModalCriar()">Novo Usuário</button>

        <table id="userTable" class="table">
            
            
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Foto</th>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Editar</th>
                    <th>Excluir</th>
                </tr>
            </thead>

            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {

                    <tr>
                        <td>@Model[i].Id</td>
                        <td><img src="@("http://127.0.0.1:10000/devstoreaccount1/teste/web/" + Model[i].Id + ".jpg")" width="50" height="50" /></td>
                        <td>@Model[i].Nome</td>
                        <td>@Model[i].Email</td>
                        <td><button type="button" class="btn btn-primary fa fa-pencil" onclick="mostrarModalEditar(@Model[i].Id)">Editar</button></td>
                        <td><button type="button" class="btn btn-danger" onclick="excluirUser(@Model[i].Id)">Excluir</button></td>
                    </tr>
                }
            </tbody>

        </table>

        <script type="text/javascript" src="~/assets/js/jquery-3.3.1.min.js"></script>
        <script type="text/javascript" src="~/assets/js/jquery.mask.min.js"></script>
        <script type="text/javascript" src="~/assets/js/jquery.validate.min.js"></script>
        <script type="text/javascript" src="~/assets/js/bootstrap.min.js"></script>
        <script type="text/javascript">

            function mostrarModalCriar() {
                if ($.active) {
                    return;
                }
                $.ajax({
                    url: "/Usuario/ModalCadastro",
                    method: "GET",
                    cache: false,
                    success: function (dados) {
                        $("#vao").html(dados);

                        $("#modalCriar").modal({
                            backdrop: "static",
                            keyboard: false
                        });
                    },
                    error: function () {
                        alert("Erro");
                    }
                })

            }

            function mostrarModalEditar(id) {
                if ($.active) {
                    return;
                }
                var obj = {
                    id: id
                };
                $.ajax({
                    url: "/Usuario/ModalEditar",
                    method: "GET",
                    cache: false,
                    data: obj,
                    success: function (dados) {
                        $("#vao").html(dados);

                        $("#modalEditar").modal({
                            backdrop: "static",
                            keyboard: false
                        });
                    },
                    error: function () {
                        alert("Erro");
                    }
                })
            }

            function excluirUser(id) {
                    var obj = {
                    id: id
                };
                $.ajax({
                    url: "/Usuario/ModalExcluir",
                    cache: false,
                    data: obj,
                    success: function (dados) {
                        $("#vao").html(dados);

                        $("#modalExcluir").modal({
                            backdrop: "static",
                            keyboard: false
                        });
                    },
                    error: function () {
                        alert("Erro");
                    }
                })
            }



        </script>

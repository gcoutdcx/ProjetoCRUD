@model ProjetoCRUD.Models.Usuario

<div id="modalEditar" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <form id="formEditar">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Editar Usuário</h4>
                </div>
                <div class="modal-body">
                    @if (Model == null)
                    {
                        <p>Pedido inexistente!</p>
                    }
                    else
                    {
                        <input type="hidden" name="Id" value="@Model.Id" />
                        <div class="form-group">
                            <label for="txtNomeEditar">Nome</label>
                            <input type="text" class="form-control" id="txtNomeEditar" name="Nome" value="@Model.Nome" />
                        </div>
                        <div class="form-group">
                            <label for="txtEmailEditar">Email</label>
                            <input type="text" class="form-control" id="txtEmailEditar" name="Email" value="@Model.Email" />
                        </div>
                        <div class="form-group">
                            <label for="comboEditar">Foto</label>
                            <input type="file" id="txtFotoEditar" name="Foto" accept="image/jpeg" />
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    @if (Model != null)
                    {
                        <button type="submit" class="btn btn-primary">Salvar</button>
                    }
                    <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                </div>
            </div>
        </form>
    </div>
</div>


<script type="text/javascript">
    $("#formEditar").validate({
        rules: {
            Nome: {
                required: true,
                minlength: 5,
                maxlength: 50
            },

            Email: {
                required: true,
                email: true
            }
        },

        submitHandler: function (form) {
            $.ajax({
                url: "/Usuario/Editar",
                method: "POST",
                data: new FormData(document.getElementById("formEditar")),
                contentType: false,
                processData: false,
                success: function (dados) {
                    if (dados == "ok") {
                        window.location.reload();
                    } else {
                        alert("Erro: " + dados);
                    }
                },
                error: function () {
                    alert("Erro");
                }
            });
        }
    });
</script>
